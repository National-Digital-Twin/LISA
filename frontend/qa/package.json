{
  "name": "ndtp-qa-boilerplate",
  "version": "1.0.0",
  "description": "BoilerPlate for the National Digital Twin Project",
  "main": "index.js",
  "scripts": {
    "debug": "cross-env ENV=staging PWDEBUG=1 DEBUG=pw:api cucumber-js --config=config/cucumber.js",
    "pretest": "npx ts-node src/helper/report/init.ts",
    "test": "cross-env FORCE_COLOR=0 cucumber-js --config=config/cucumber.js || true",
    "test:local": "cross-env ENV=local FORCE_COLOR=0 cucumber-js --config=config/cucumber.js --",
    "posttest": "npx ts-node src/helper/report/report.ts",
    "test:failed": "cucumber-js -p rerun @rerun.txt",
    "format": "npx prettier --write .",
    "lint:fix": "eslint --fix ."
  },
  "keywords": [
    "cucumber",
    "cucumber - TS",
    "playwright-cucumber"
  ],
  "author": "NDTP",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "12.2.0",
    "@playwright/test": "1.56.1",
    "@types/node": "24.9.1",
    "cross-env": "^10.0.0",
    "dotenv": "17.2.3",
    "fs-extra": "^11.3.1",
    "lighthouse": "13.0.1",
    "multiple-cucumber-html-reporter": "3.9.3",
    "playwright-lighthouse": "^4.0.0",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "@faker-js/faker": "10.1.0",
    "chrome-launcher": "1.2.1",
    "unique-names-generator": "^4.7.1"
  }
}
